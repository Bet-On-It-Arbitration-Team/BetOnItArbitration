<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RatedCasesFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rated_cases_fragment" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pending Cases ()" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/glRatedCaseHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="3"
        app:rowCount="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bet Name"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Date Assigned"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Date Due"
            app:layout_column="2"
            app:layout_row="0" />

    </androidx.gridlayout.widget.GridLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRatedCases"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>